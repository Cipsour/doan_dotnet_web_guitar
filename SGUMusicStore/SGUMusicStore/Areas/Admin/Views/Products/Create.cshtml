﻿@model SGUMusicStore.Models.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="content" class="">

    <div class="content-main p-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">Sản phẩm</li>
                <li class="breadcrumb-item active" aria-current="page">
                    Thêm sản phẩm
                </li>
            </ol>
        </nav>

        <div class="cus-form-add">
            <form method="post" action="/Admin/Products/create" enctype="multipart/form-data" class="row g-3">
                @Html.AntiForgeryToken()

                <!-- nameProduct -->
                <div class="col-md-12">
                    <label for="validationDefault01" class="form-label">Tên sản phẩm</label>
                    <input type="text"
                           name="nameProduct"
                           class="form-control"
                           id="validationDefault01"
                           required />
                </div>
                <!-- type -->
                <div class="col-md-12">
                    <label for="validationDefault04" class="form-label">Danh mục</label>
                    <select class="form-select" name="idType" id="validationDefault04" required>
                        <option selected disabled value="">Chọn</option>
                        <option value="T01">GUITAR</option>
                        <option value="T02">VIOLIN</option>
                        <option value="T03">PIANO</option>
                        <option value="T04">ORGAN</option>
                        <option value="T05">HARMONICA</option>
                        <option value="T06">DRUM</option>
                        <option value="T07">PHỤ KIỆN</option>


                    </select>
                </div>
                <!-- sizeS -->
                <div class="col-md-4">
                    <label for="validationDefault01" class="form-label">Cỡ nhỏ (Small)</label>
                    <input type="number"
                           name="sizeS"
                           min="1"
                           class="form-control"
                           id="validationDefault01"
                           required />
                </div>
                <!-- sizeM -->
                <div class="col-md-4">
                    <label for="validationDefault01" class="form-label">Cỡ trung bình (Medium)</label>
                    <input type="number"
                           name="sizeM"
                           min="1"
                           class="form-control"
                           id="validationDefault01"
                           required />
                </div>
                <!-- sizeXl -->
                <div class="col-md-4">
                    <label for="validationDefault01" class="form-label">Cỡ lớn (Large)</label>
                    <input type="number"
                           min="1"
                           name="sizeL"
                           class="form-control"
                           id="validationDefault01"
                           required />
                </div>
                <!-- price -->
                <div class="col-md-12">
                    <label for="validationDefault01" class="form-label">Giá bán</label>
                    <input type="number"
                           name="price"
                           min="100"
                           max="999"
                           class="form-control"
                           id="validationDefault01"
                           required />
                </div>
                <!-- hình ảnh 1 -->
                <div class="col-md-6">
                    <label for="validationDefault01" class="form-label">Hình ảnh 1</label>
                    <input type="file"
                           name="img1"
                           class="form-control URLimg1"
                           accept="image/png, image/gif, image/jpeg"
                           id="validationDefault01"
                           required />
                </div>
                <div class="col-md-6">
                    <label for="validationDefault01" class="form-label">Hình ảnh 2</label>
                    <input type="file"
                           name="img2"
                           class="form-control URLimg2"
                           id="validationDefault01"
                           accept="image/png, image/gif, image/jpeg"
                           required />
                </div>
                <!-- description -->
                <div class="col-md-12">
                    <label for="validationDefault01" class="form-label">Mô tả</label>
                    <textarea type="text"
                              name="description"
                              class="form-control"
                              id="validationDefault01"
                              required></textarea>
                </div>

                <div class="col-12">
                    <button class="btn btn-primary" type="submit">Thêm</button>
                </div>
            </form>
        </div>
    </div>
</div>


@Scripts.Render("~/bundles/admin/jquery")

<script>
    $('.sp ul').addClass('show');
    $('.addsp').addClass('active');
</script>
