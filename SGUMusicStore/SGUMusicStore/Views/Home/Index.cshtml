@model IEnumerable<SGUMusicStore.Models.Product>
@{
    ViewBag.Title = "Home Page";
}

@Styles.Render("~/Content/main")
@Styles.Render("~/Content/product")
<!-- ----------Slider---------- -->
<div class="slider">
    <a href="/" class="">
        <img src="/Images/slider.jpg"
             alt="" />
    </a>
</div>
<!-- ----------Slider---------- -->
<!-- ----------Banner---------- -->
<div class="banner">
    <div class="banner-item">
        <img src="/Images/bg1.jpg"
             alt="" />
    </div>
    <div class="banner-item">
        <img src="/Images/bg2.jpg"
             alt="" />
    </div>
    <div class="banner-item ">
        <img src="/Images/bg3.jpg"
             alt="" />
    </div>
</div>

<!-- ----------Banner---------- -->

@{
    int ctop = 0;
    int cbot = 0;
}
<!-- Product -->
<div class="products">
    <div class="product-headingg">PHỤ KIỆN MỚI - DÀNH RIÊNG CHO BẠN</div>
    <div class="grid">
        <div class="grid__row">



            @foreach (var item in Model)
            {
                cbot++;
                if (cbot > 7)
                {
                    <div class="grid__col-3">
                        <div class="product">
                            <h1 style="display:none" id="idProduct">@item.idProduct</h1>
                            <img src="@item.ImageProducts.First().URLImage"
                                 alt=""
                                 class="product-img product-show" />
                            <img src="@item.ImageProducts.Last().URLImage"
                                 alt=""
                                 class="product-img product-img-hover" />
                        </div>
                        <div class="product-info">
                            <div class="product-title">
                                @item.nameProduct
                            </div>
                            <div class="product-price">@item.price,000₫</div>
                        </div>
                    </div>
                }


                if (cbot == 15)
                { break; }

            }

        </div>

    </div>
</div>
<!-- Product -->
<!-- ----------Banner---------- -->
<div style="margin-top:30px" class="banner">
    <div class="banner-item">
        <img src="/Images/bg4.jpg"
             alt="" />
    </div>
    <div class="banner-item">
        <img src="/Images/bg5.jpg"
             alt="" />
    </div>
    <div class="banner-item ">
        <img src="/Images/bg6.jpg"
             alt="" />
    </div>
</div>
<!-- ----------Banner---------- -->
<!-- Product -->


<div class="products">
    <div style="text-transform:uppercase" class="product-headingg">Phụ kiện - Nổi bật  2023</div>
    <div class="grid">
        <div class="grid__row">
            @foreach (var item in Model)
            {
                ctop++;
                <div class="grid__col-3">
                    <div class="product">
                        <h1 style="display:none" id="idProduct">@item.idProduct</h1>
                        <img src="@item.ImageProducts.First().URLImage"
                             alt=""
                             class="product-img product-show" />
                        <img src="@item.ImageProducts.Last().URLImage"
                             alt=""
                             class="product-img product-img-hover" />
                    </div>
                    <div class="product-info">
                        <div class="product-title">
                            @item.nameProduct
                        </div>
                        <div class="product-price">@item.price,000₫</div>
                    </div>
                </div>

                if (ctop == 8)
                {
                    break;
                }
            }

        </div>

    </div>
</div>
<!-- Product -->
@Scripts.Render("~/bundles/product")
